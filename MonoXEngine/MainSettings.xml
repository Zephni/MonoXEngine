<?xml version="1.0" encoding="utf-8" ?> 

<MainSettings>
  
  <Directories>
    <Content>Content</Content>
    <Scenes>Scenes</Scenes>
  </Directories>

  <Viewport>
    <ResolutionX>256</ResolutionX>
    <ResolutionY>240</ResolutionY>
    <ViewportArea>FIT_BEST</ViewportArea>
    <AllowResizing>True</AllowResizing>
    <FullScreen>False</FullScreen>
  </Viewport>
  
  <Initiation>
    <StartupScene>DebugScene</StartupScene>
  </Initiation>

  <Defaults>
    <Layer>Main</Layer>
  </Defaults>

  <LayerNames>Background, Main, UI, Fade</LayerNames>
    
  <Layers>
    <Background>SamplerState: PointWrap;</Background>
    <Main>Matrix: Camera;</Main>
    <UI></UI>
    <Fade></Fade>
  </Layers>

</MainSettings>